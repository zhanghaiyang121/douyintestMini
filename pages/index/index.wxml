  <view wx:for="{{videolist}}" class="item-container">  
    <view style='width:{{screenWidth}}px;height:210px;' class='back-img'> 
      <image src="{{baseserver}}{{item.coverPath}}" style='width:{{screenWidth}}px;height:210px;' mode="aspectFit" bindtap='showVideoInfo' data-arrindex='{{index}}'></image>
    </view> 
    <view class="desc">
      <view class="faceName">
          <image class='myface' src="{{baseserver}}{{item.faceImage}}"></image>
          <view class="nickname">{{item.nickname}}</view>
      </view>
    </view>
  </view>  
